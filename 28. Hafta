long ftell(FILE *);  //DOSYA KONUM GÖSTERİCİSİNN DEĞERİNİ GÖSTERİRİ

int main(void)
{
FILE* f = fopen("employees.dat", "rb");

if (!f) {
printf("hata\n"); return 1; }

printf("%ld\n", ftell(f));
fseek(f, 0L, SEEK_END);
printf("%ld\n", ftell(f) / (long)sizeof(Employee));
}
}

