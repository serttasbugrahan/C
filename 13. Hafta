//emlak kalem,kelam,  iki dizinin anagram olup olmadığını bul
//ilave bir ya da birden fazla dizi kullabilirsiniz

int main(void)
{
char s1[SIZE];
char s2[SIZE];

printf("iki kelime girin: ");
scanf("%s%s", s1, s2);

int cnt[26] = {0};

for (int i = 0; s2[i] != '\0'; ++i){
++cnt[toupper(s1[i]) - 'A'];
}

for (int i = 0; s2[i] != '\0'; ++i){
--cnt[toupper(s1[i]) - 'A'];
}

int k;
for (k = 0; k < 26; ++k){
if (cnt[k])
break;
}

if (k == 26)
printf("anagram\n";
else
printf("anagram degil\n";
}

