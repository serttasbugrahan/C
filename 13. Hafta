//s1 ve s2 yazısı aynı ise evet aynı değil ise farklı ekrana yazsın

int main(void)
{
char s1[SIZE];
char s2[SIZE];
printf("2 yazi giirn: ");
scanf("%s%s%s", s1, s2);

int i = 0;
int flag = 0;
while (s1[i] == s2[i]){
if (s1[i] == '\0'){
flag = 1;
break;
}
++i;
}
if (flag){
printf("ayni yazilar\n");
else{
printf("farkli yazilar"\n");
}
}
}

