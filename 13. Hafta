///////////////////////////////////////////////////1. Ders//////////////////////////////////////

                             yazı tipi örnekleri devam

int main(void)
{
char str[SIZE];
int ch;

printf("bir yazi girin: ");
sgets(str);
printf("sayilacak karekter
ch = getchar();
int cnt = 0;

for (int i = 0; str[i] != '\0'; ++i){
if (toupper(str[i]) == toupper(ch)){
++cnt;
}
}
printf("toplam %d tane %c karakteri var\n", cnt, ch);
}

